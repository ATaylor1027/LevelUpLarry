-- StarterPlayer/StarterPlayerScripts/CommandPopup
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

local commandEvent = ReplicatedStorage:WaitForChild("Actions"):WaitForChild("CommandEvent", 30)
if not commandEvent then
	warn("[Level Up Larry] CommandEvent not found after 30 seconds")
	return
end

-- Simple feedback popup (expand this for a full GUI later)
commandEvent.OnClientEvent:Connect(function(command, message)
	if command == "Feedback" then
		local screenGui = Instance.new("ScreenGui")
		screenGui.Name = "CommandFeedback"
		screenGui.Parent = PlayerGui

		local frame = Instance.new("Frame")
		frame.Size = UDim2.new(0, 200, 0, 50)
		frame.Position = UDim2.new(0.5, -100, 0.5, -25)
		frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
		frame.Parent = screenGui

		local text = Instance.new("TextLabel")
		text.Size = UDim2.new(1, 0, 1, 0)
		text.BackgroundTransparency = 1
		text.Text = message
		text.TextColor3 = Color3.fromRGB(255, 255, 255)
		text.Parent = frame

		wait(3)
		screenGui:Destroy()
	end
end)